<svg width="100%" height="100%">

  <SlippyRectangle Value="@State.Bounds" Fill="none" StrokeWidth="2" />
  @if (State.BuildableBounds != null)
  {
    <SlippyRectangle Value="@State.BuildableBounds" Fill="none" StrokeWidth="1" />
  }

</svg>


@code {
  [CascadingParameter()]
  public State State { get; set; }


  protected override void OnInitialized()
  {
    base.OnInitialized();
    State.StateHasChanged += StateOnStateHasChanged;
  }

  private void StateOnStateHasChanged(object sender, EventArgs e)
  {
      StateHasChanged();
  }

}
